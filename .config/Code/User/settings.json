{
    "workbench.iconTheme": "eq-material-theme-icons-darker",
    "workbench.startupEditor": "newUntitledFile",

    "terminal.integrated.shell.linux" : "/bin/fish",
    "terminal.external.linuxExec": "st",
    "terminal.explorerKind": "external",
    "terminal.integrated.rendererType": "auto",

    "editor.fontFamily": "'Roboto Mono', 'monospace', 'Droid Sans Fallback'",
    "editor.renderWhitespace": "all",
    "editor.suggest.maxVisibleSuggestions": 10,
    "editor.maxTokenizationLineLength": 60000,

    "omnisharp.useGlobalMono": "never",
    "omnisharp.enableRoslynAnalyzers": true,

    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.suppressStartupBanner": true,
    "powershell.promptToUpdatePowerShell": false,

    "rga.path": "/home/faith/Downloads/radeon-gpu-analyzer/rga",

    "git.autofetch": true,
    "window.titleBarStyle": "custom",
    "breadcrumbs.enabled": true,
    "explorer.autoReveal": false,
    "csharpsortusings.sort.usings.splitGroups": false,

    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<C-w>"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": [
                "<C-b>"
            ],
            "commands": 
            [
                "workbench.action.toggleSidebarVisibility"
            ]
        }
    ],
    "window.zoomLevel": 1,
    "mesonbuild.configureOnOpen": true,
    "git.enableCommitSigning": true,
    "cmake.configureOnOpen": true,
    "timeline.excludeSources": [
        "git-history"
    ],
    "shellLauncher.shells.linux": [

        {
            "shell": "/bin/pwsh",
            "label": "pwsh"
        },
        {
            "shell": "/bin/bash",
            "label": "bash"
        },
        {
            "shell": "/bin/fish",
            "label": "fish"
        }
    ],
    "files.autoGuessEncoding": true
}
